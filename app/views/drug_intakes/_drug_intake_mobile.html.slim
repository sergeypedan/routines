- drug = intake.drug

.cell-1.workout-mobile__excercise data-action="show-cell-menu"
	.cell-1__content
		span.workout-mobile__counter
			= index + 1
			| .
		h5.workout-mobile__excercise__title style="margin-bottom: 5px"
			= drug.name

			span<
				| Ã—
				=< number_with_precision intake.amount, strip_insignificant_zeros: true

			- if drug.brand
				span< style="color: hsl(0, 0%, 80%)"
					| (
					= drug.brand.name
					| )

		ul.workout-mobile__muscles__ul
			- drug.association_drug_substances.each.with_index(1) do |ass, index|
				li
					= ass.substance.name
					=< number_to_currency ass.dose * intake.amount, unit: ass.unit
					= ", " if index < drug.association_drug_substances.size

		= time_tag intake.created_at, l(intake.created_at, format: "%H:%M %Z"), class: "drug-intake-mobile__time"

	.cell-1__backdrop data-role="backdrop" hidden=""
	.cell-1__menu role="menu" hidden=""
		= edit_btn(intake, text: fa_icon("pencil"), class: ["btn", "btn-primary"])

		= button_to [:duplicate, intake], { class: "btn btn-primary", form: { class: "form-as-btn" }, remote: false }
			= fa_icon "copy"

		= delete_btn(intake, { text: fa_icon("trash"), class: ["btn", "btn-outline-danger"] })
